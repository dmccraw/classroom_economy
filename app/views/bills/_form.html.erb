<div class="well">
  <script type="text/javascript">
    $(document).ready(function() {
      $('#bill_due_date').datepicker({
          format: 'mm/dd/yyyy'
      });
    });
  </script>

  <%= form_for([@group,@bill]) do |f| %>

    <%= render partial: "/shared/errors", locals: { o: @bill } %>

    <div class="field">
      <%= f.label :from_account %>
      <%= f.select :from_account_id, accounts_for_select(@from_accounts) %>
    </div>

    <div class="field">
      <%= f.label :amount %>
      $<%= f.text_field :amount %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, class: "input-xxlarge", rows: 3 %>
    </div>

    <div class="field">
      <%= f.label :due_date %>
      <%= f.text_field :due_date, value: I18n.l(DateTime.now, format: :date) %>
    </div>
    <div class="actions">
      <%= f.submit nil, class: "btn" %>
    </div>
  <% end %>
</div>