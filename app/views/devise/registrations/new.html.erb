
<div class="container sign-in" style="max-width:500px;">

  <div class="field form-group">
    <div class="col-lg-offset-4 col-lg-8">
      <h2>Sign up</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <%= f.hidden_field :user_type, value: 2 %>

    <div class="field form-group">
      <%= f.label :first_name, class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :last_name, class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>


    <div class="field form-group">
      <%= f.label :email, "Email", class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="field form-group">
      <div class="col-lg-offset-4 col-lg-8">
        <%= f.submit "Sign in", class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>

<div class="container sign-in" style="max-width:500px;">
  <%= render "devise/shared/links" %>
</div>
