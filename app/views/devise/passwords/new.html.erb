<div class="container sign-in" style="max-width:500px;">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :login, "Email/Username", class: "col-lg-4 control-label" %>
      <div class="col-lg-8">
        <%= f.email_field :login, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="field form-group">
      <div class="col-lg-offset-4 col-lg-8">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container sign-in" style="max-width:500px;">
  <%= render "devise/shared/links" %>
</div>