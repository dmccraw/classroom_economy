<%= render partial: "/groups/top", locals: { current_nav: "students" } %>
<% can_update = can? :update, @student %>
<% is_self = current_user == @student %>
<% can_delete = can? :delete, @student %>
<% account = @student.account(@group.id) %>

<% if can_update %>
  <div class=" well pull-right">
    <%= link_to "<i class=icon-cog></i> Edit Student Info".html_safe, edit_group_student_path(@group, @student), class: "btn btn-primary"  %>
    <%= link_to "<i class=icon-remove></i> Delete Student".html_safe, group_student_path(@group, @student), method: "delete", data: { confirm: "Are you sure? This will delete this student, their accounts, stores and all transactions regarding them.This action can't be undone!"}, class: "btn btn-danger"  %>
  </div>
<% end %>

<p>
  <h2><%= @student.display_name %></h2>
</p>

<% if can_update || is_self %>
  <p>
    <b>Email:</b>
    <%= @student.email %>
  </p>
  <hr>
<% end %>

<% if can_update || is_self %>
  <h2>Account</h2>
  <p>
    <b>Balance:</b>
    <%= display_balance(account.balance) %>
  </p>
  <h3>Last 5 Transactions</h3>
  <%= render partial: '/transactions/transactions', locals: { transactions: account.transactions.limit(5).order("created_at DESC") } %>
  <p>
    <%= link_to "All Transactions", group_transactions_path(@group, account_id: account.id), class: "btn" %>
  </p>
<% end %>
<hr>

<% if can_update %>
  <div class="pull-right">
    <%= link_to "+ Add Job", new_group_job_assignment_path(@group, user_id: @student.id), class: "btn btn-success"  %>
  </div>
<% end %>

<h2>Jobs</h2>
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Monthly Salary</th>
    <% if can_update %>
      <th></th>
    <% end %>
  </thead>
<% if @student.job_assignments.any? %>
  <tbody>
    <% @student.job_assignments.each do |job_assignment| %>
      <tr>
        <td><b><%= job_assignment.job.title %></b></td>
        <td><%= job_assignment.job.description %></td>
        <td><%= display_balance(job_assignment.job.salary) %></td>
        <% if can_update %>
          <td><%= link_to "Unassign Job", group_job_assignment_path(job_assignment), method: "delete", data: { confirm: "Are you sure? This action can't be undone!"}, class: "btn"  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
<% else %>
  <tr>
    <td colspan="100">This <%= @student.display_user_type %> does not have a job.</td>
  </tr>
<% end %>
</table>
<hr>

<% if is_self %>
  <div class="pull-right">
    <%= link_to 'Open Store', new_group_store_path(student_id: @student.id), class: "btn" %>
  </div>
<% end %>

<h2>Stores</h2>
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Description</th>
    <% if can_update || is_self %>
      <th>Balance</th>
      <th></th>
      <th></th>
    <% end %>
  </thead>
<% stores = @student.stores.where(group_id: @group.id) %>
<% if stores.any? %>
  <tbody>
    <% stores.each do |store| %>
      <tr>
        <td><b><%= link_to(store.name, group_store_path(@group, store)) %></b></td>
        <td><%= store.description %></td>
        <% if can_update || is_self %>
          <td><%= display_balance(store.account.balance) %></td>
          <td><%= link_to "Transactions", group_transactions_path(@group, account_id: store.account.id), class: "btn"  %></td>
          <td><%= link_to "<i class=icon-cog></i> Edit".html_safe, edit_group_store_path(@group, store), class: "btn btn-primary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
<% else %>
  <tr>
    <td colspan="100">This <%= @student.display_user_type %> does not own any stores.</td>
  </tr>
<% end %>
</table>

