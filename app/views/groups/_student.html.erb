<div class="row-fluid">

  <div class="span8">
    <h2>Account</h2>
    <p>
      <b>Balance:</b>
      <%= number_to_currency(current_user.account(@group.id).balance) %>
    </p>

    <hr>

    <h2>Last 20 Transactions</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <th>ID</th>
        <th>Amount</th>
        <th>To</th>
        <th>From</th>
      </thead>
      <tbody>
        <% transactions = current_user.account(@group.id).transactions.limit(20).order("created_at DESC") %>
        <% if transactions.count > 1 %>
          <%= render partial: transactions %>
        <% else %>
          <tr>
            <td colspan="100">You have no disputed transactions.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "All Transactions" %>

    <hr>

    <h2>Stores</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
        <tr>
          <td colspan="100">You have no stores open.</td>
        </tr>
      </tbody>
    </table>
    <hr>
  </div>

  <div class="span4 pull-right">
    <h2>Actions</h2>
    <%= link_to "Transfer Funds", new_group_transaction_path(@group, from_account_id: current_user.account(@group.id).id), class: "btn btn-success", style: "width: 140px;" %>
    <hr>
    <h2>Jobs</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>Monthly Salary</th>
      </thead>
      <tbody>
        <% job_assignments = current_user.job_assignments.where(group_id: @group.id) %>
        <% if job_assignments.count > 0 %>
          <% job_assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.job.name %></td>
              <td><%= number_to_currency(assignment.job.salary) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr><td colspan="100">You have no jobs assigned to you</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

