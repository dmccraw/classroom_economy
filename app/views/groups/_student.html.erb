<div class="row-fluid">

  <div class="span8">
    <h3>Personal Account</h3>
    <p>
      <h4>Balance: <%= number_to_currency(current_user.account(@group.id).balance) %></h4>
    <hr>

    <h3>Last 20 Transactions</h3>
    <%= link_to "All Transactions", group_transaction_path(@group, account_id: current_user.account(@group.id)), class: "btn" %><br/><br/>
    <table class="table table-striped table-bordered">
      <thead>
        <th>ID</th>
        <th>Amount</th>
        <th>To</th>
        <th>From</th>
        <th>Description</th>
        <th>Occurred On</th>
        <th>Entered</th>
      </thead>
      <tbody>
        <% transactions = current_user.account(@group.id).transactions.limit(20).order("created_at DESC") %>
        <% if transactions.count > 0 %>
          <%= render partial: transactions, locals: { account_id: current_user.account(@group.id).id} %>
        <% else %>
          <tr>
            <td colspan="100">You have no transactions.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="span4 pull-right">
    <h3>Actions</h3>
    <%= link_to "Transfer Funds", new_group_transaction_path(@group, from_account_id: current_user.account(@group.id).id), class: "btn", style: "width: 140px;" %>
    <hr>
    <h3>My Jobs</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>Monthly Salary</th>
      </thead>
      <tbody>
        <% job_assignments = current_user.job_assignments.where(group_id: @group.id) %>
        <% if job_assignments.count > 0 %>
          <% job_assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.job.title %></td>
              <td><%= number_to_currency(assignment.job.salary) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr><td colspan="100">You have no jobs assigned to you</td></tr>
        <% end %>
      </tbody>
    </table>

    <hr>
    <h3>Stores I Own</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
          <% if current_user.store_owners.count > 0 %>
            <% current_user.store_owners.each do |store_owner| %>
              <tr>
                <td>
                  <%= link_to store_owner.store.name, group_store_path(@group, store_owner.store)  %>
                  <%= "<p class='text-error'>(Not Approved)</p>".html_safe unless store_owner.store.approved %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="100">You have no stores open.</td>
            </tr>
          <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to('+ Open Store', new_group_store_path(@group, user_id: current_user.id), class: "btn") %>
    </div>

    <hr>
    <h3>Stores I Manage</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
          <% if current_user.store_managers.count > 0 %>
            <% current_user.store_managers.each do |store_manager| %>
              <tr>
                <td>
                  <%= link_to store_manager.store.name, group_store_path(@group, store_manager.store)  %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="100">You do not manage any stores.</td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>


</div>

