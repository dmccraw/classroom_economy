<p>
  <b>Name:</b>
  <%= @user.display_name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

  <div class="well">
    <h2>Account</h2>
    <p>
      <b>Balance:</b>
      <%= number_to_currency(@user.account(get_current_group_id).balance) %>
    </p>

    <h2>Stores</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Balance</th>
        <th></th>
        <th></th>
      </thead>
    <% stores = @user.stores.where(group_id: get_current_group_id) %>
    <% if stores.any? %>
      <tbody>
        <% stores.each do |store| %>
          <tr>
            <td><%= store.name %></td>
            <td><%= store.description %></td>
            <td><%= number_to_currency(store.account.balance) %></td>
            <td>Transactions</td>
            <td><%= link_to "Edit", edit_store_path(store, user_id: @user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <tr>
        <td colspan="100">This <%= @user.display_user_type %> does not own any stores.</td>
      </tr>
    <% end %>
    </table>
    <%= link_to 'Open Store', new_store_path(group_id: @user.groups.first.id, user_id: @user.id) if current_user == @user %>
  </div>

<%#= link_to 'Edit', edit_user_path(@user) %> |
