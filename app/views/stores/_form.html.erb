<%= form_for([@group,@store]) do |f| %>

  <%= render partial: '/shared/errors', locals: { o: @store } %>

  <%= hidden_field_tag :user_id, params[:user_id] %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 5 %>
  </div>
  <div class="form-group pull-right">
    <%= f.submit (@store.new_record? ? "Open Store" : "Update"), class: "btn btn-success" %>
    <%= link_to 'Cancel', group_stores_path(@group), class: "btn btn-danger" %>
  </div>
<% end %>
