<h2>My Account</h2>
<% account = current_user.account(get_current_group_id) %>
<p>
  <b>Balance:</b>
  <%= number_to_currency(account.balance) %> |
  <%= link_to("View Account", account_path(account)) %>
</p>
<hr>
<h2>My Stores</h2>
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Balance</th>
    <th></th>
    <th></th>
  </thead>
<% stores = current_user.stores.where(group_id: get_current_group_id) %>
<% if stores.any? %>
  <tbody>
    <% stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.description %></td>
        <td><%= number_to_currency(store.account.balance) %></td>
        <td>Transactions</td>
        <td><%= link_to "Edit", edit_store_path(store, user_id: current_user.id) %></td>
      </tr>
    <% end %>
  </tbody>
<% else %>
  <tr>
    <td colspan="100">You don't own any stores.</td>
  </tr>
<% end %>
</table>
<%= link_to "Open Store", new_store_path(group_id: get_current_group_id, user_id: current_user.id) %>
<hr>
